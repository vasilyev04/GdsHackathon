<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/name_of_dost"
                android:textColor="@color/on_background"
                android:textSize="20sp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/distance_to_target_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/tertiary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="20dp"
                android:text="120Ð¼"
                />


            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/tertiary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_name_tv"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"
                android:text="@string/address"
                />


            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/custom_divider_bg"
                android:backgroundTint="@color/tertiary"
                android:alpha="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_tv"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="13dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/photo_cv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/tertiary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="18dp"
                app:layout_constraintTop_toBottomOf="@id/divider_1"
                android:layout_marginTop="13dp">

            </androidx.cardview.widget.CardView>



            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/custom_divider_bg"
                android:backgroundTint="@color/tertiary"
                android:alpha="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_cv"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="13dp"/>


            <TextView
                android:id="@+id/title_work_schedule_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/work_schedule_text"
                android:textColor="@color/secondary"
                android:textSize="18sp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_2"
                />

            <TextView
                android:id="@+id/schedule_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/schedule"
                android:textColor="@color/secondary"
                android:textSize="14sp"
                android:layout_marginHorizontal="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_work_schedule_tv"
                />

            <ImageView
                android:id="@+id/contacts_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:src="@drawable/icon_contacts"
                app:layout_constraintEnd_toStartOf="@id/contacts_contact_tv"
                app:layout_constraintTop_toBottomOf="@id/divider_2"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/contacts_contact_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/contacts_contact_text"
                android:textColor="@color/secondary"
                android:textSize="12sp"
                android:layout_marginTop="22dp"
                android:layout_marginHorizontal="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_2"
                />


            <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/custom_divider_bg"
                android:backgroundTint="@color/tertiary"
                android:alpha="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/schedule_tv"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="13dp"/>

            <TextView
                android:id="@+id/title_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/description_title"
                android:textColor="@color/secondary"
                android:textSize="18sp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_3"
                />

            <TextView
                android:id="@+id/description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/descriptiton"
                android:textColor="@color/secondary"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:layout_marginHorizontal="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_description_tv"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    <Button
        android:id="@+id/find_route_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/primary"
        app:cornerRadius="16dp"
        android:layout_marginHorizontal="18dp"
         android:layout_marginBottom="15dp"
        android:text="@string/route_text"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"/>


</LinearLayout>